citHeader("To cite scan in publications use:")

citEntry(entry = "Misc",
  title        = "scan: Single-Case Data Analyses for Single and Multiple Baseline Designs",
  shorttitle = "scan",
  publisher = "CRAN",
  author       = personList(as.person("Jürgen Wilbert"),
                   as.person("Timo Lüke")),
  year         = format(packageDate("scan"), "%Y"),
  url          = "https://CRAN.R-project.org/package=scan",

  textVersion  =
  paste0("APA style:\n", 
    "Wilbert, J. & Lüke, T. (", format(packageDate("scan"), "%Y"), "). ",
    "*Scan: Single-Case Data Analyses for Single and Multiple Baseline Designs* (Version ", packageVersion("scan"), ")[Computer software]. ",
    "CRAN. ",
    "https://CRAN.R-project.org/package=scan.")
)
